<%= form_for @submission, url: {action: "create"} do |f| %>

  <%= @question.content %><br />

  <% @question_options.each do |que_opt| %>
     <%= f.radio_button_tag(:que_opt, que_opt.option.value) %><br />
  <% end %>
  <%= f.text_field, :placeholder => "Options" %>

  <%= f.submit "Submit" %>

<% end %>
