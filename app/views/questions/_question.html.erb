<%= content_tag :h6, question.content %>
<%= form_tag :submissions, :action => '/submissions' do |builder|%>
  <% if question.expects_none? %>
  <% elsif question.expects_checkbox? %>
  <% elsif question.expects_radio? %>
    <%= collection_radio_buttons :submission, :option_id, question.options, :id, :value %>
  <% elsif question.expects_select? %>
  <% end %>
  <%= submit_tag 'Submit!' %>
<% end %>
