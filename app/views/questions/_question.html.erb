<%= content_tag :h6, question.content %>

<%= form_for Submission.new, :html => {:class => "form"} do |builder|%>
  <%= builder.hidden_field :question_id, value: question.id %>

  <% if question.expects_none? %>
  <% elsif question.expects_checkbox? %>
  <% elsif question.expects_radio? %>
    <%= builder.collection_radio_buttons :option_id, question.options, :id, :value %>
  <% elsif question.expects_select? %>
  <% end %>
  <!-- <%#= builder.submit 'Submit!' %> -->
<% end %>
